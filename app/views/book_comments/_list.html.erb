<%= tag.table class: 'table', id: "book-#{book.id}-comment-list" do %>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book_comment.user_id) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"40x40" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
        <% if book_comment.user_id == current_user.id %>
          <%= link_to 'Destroy',
                      book_book_comment_path(book_comment.book_id, book_comment.id),
                      method: :delete, class: 'btn btn-sm btn-danger', remote: true %>
        <% end %>
      </td>
    </tr>
  <% end %>
<% end %>