<%= link_to '新しい順', books_path(sort_column: 'created_at') %>
|
<%= link_to '評価の高い順', books_path(sort_column: 'rating') %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= render 'favorites/favorite_button', book: book %></td>
        <td>コメント数: <%= book.book_comments.size %></td>
        <td><%= tag.div class: 'evaluate_star', data: { rating: book.rating.to_f } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $('.evaluate_star').empty().raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'book[rating]',
    half: true,
    readOnly: true,
    score: function() {
      return this.dataset.rating;
    }
  });
</script>  
